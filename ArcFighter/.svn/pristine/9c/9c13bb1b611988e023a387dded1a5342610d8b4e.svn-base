program progknifeexamp;

uses
	osxbgi,
	//wingraph,wincrt,
	 math;

procedure StartGraphics();
var
	gm,gd: smallInt;
begin
	gd := Nopalette;	
	gm := m800x600;
	InitGraph(gd,gm, '');
end;



procedure DrawSmthg();
var
    x0,y0,x1,y1,i,radius, x2, y2, x3, y3, x4, y4, x5, y5, x6, y6: Integer;
    fi: real;

begin

    

    x0 := 400;
    y0:= 300;
    radius := 50;



    updateGraph(UpdateOff);
    for i:= 1 to 1000 do 
    begin
        ClearDevice();
        fi:= 0.05 * i;

        x1:= x0 + round (radius*cos(fi + 11*pi/6));
        y1:= y0 - round (radius*sin(fi + 11*pi/6));

        x2:= x0 + round (radius*cos(fi  + 5*pi/3));
        y2:= y0 - round (radius*sin(fi  + 5*pi/3));

        x3:= x0 + round (25*cos(fi  + pi/4));
        y3:= y0 - round (25*sin(fi  + pi/4));

        x4:= x0 + round (80*cos(fi  + 11*pi/6));
        y4:= y0 - round (80*sin(fi  + 11*pi/6));

        x5:= x0 + round (80*cos(fi  + 7*pi/4));
        y5:= y0 - round (80*sin(fi  + 7*pi/4));

        x6:= x0 + round (50*cos(fi  + 7*pi/4));
        y6:= y0 - round (50*sin(fi  + 7*pi/4));
      
	  	// центр
        FillEllipse (x0, y0, 20, 20);
        FillEllipse (x3, y3, 5, 5);
        SetColor(Red);

        line(x1,y1,x0,y0);
        line(x0,y0,x2,y2);
        line(x1,y1,x2,y2);
        line(x1,y1,x4,y4);
        line(x4,y4,x5,y5);
        line(x5,y5,x6,y6);
        
		
        updateGraph(UpdateNow);
        Delay(20);
    end;
end;



begin

	
	StartGraphics();

	
	
	DrawSmthg();

	

	readkey();
	CloseGraph();
end.